{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "outDir": "./dist"
  },
  "include": ["src/index.ts", "src/lib/**/*.ts", "interfaces/**/*.ts"],
  "exclude": [
    "src/**/__tests__/*",
    "src/**/*.vue"
  ]
}